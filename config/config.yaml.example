# QA System Configuration Example
# Copy this file to config.yaml and update with your settings

LOGGING:
  LEVEL: "INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
  LOG_FILE: "logs/qa_system.log"
  DEBUG: false

SECURITY:
  # Set these values in your .env file or environment variables
  GOOGLE_APPLICATION_CREDENTIALS: "${GOOGLE_APPLICATION_CREDENTIALS}"
  GOOGLE_CLOUD_PROJECT: "${GOOGLE_CLOUD_PROJECT}"
  GOOGLE_CLOUD_REGION: "us-central1"
  GOOGLE_VISION_API_KEY: "${GOOGLE_VISION_API_KEY}"  # Optional, for image processing

FILE_SCANNER:
  DOCUMENT_PATH: "./docs"
  ALLOWED_EXTENSIONS:
    - "txt"
    - "md"
    - "csv"
    - "pdf"
    - "jpg"
    - "jpeg"
    - "png"
    - "gif"
    - "bmp"
    - "webp"
  EXCLUDE_PATTERNS:
    - ".*"
    - "__pycache__"
    - "*.pyc"
    - "node_modules"
    - ".git"
    - ".env"
  HASH_ALGORITHM: "sha256"
  SKIP_EXISTING: true

DOCUMENT_PROCESSING:
  MAX_CHUNK_SIZE: 3072  # Maximum characters per chunk
  MIN_CHUNK_SIZE: 1024  # Minimum characters per chunk
  CHUNK_OVERLAP: 768    # Character overlap between chunks
  CONCURRENT_TASKS: 6   # Number of concurrent processing tasks
  BATCH_SIZE: 50       # Number of documents to process in a batch
  PRESERVE_SENTENCES: true
  PDF_HEADER_RECOGNITION:
    ENABLED: true
    MIN_FONT_SIZE: 12
    PATTERNS: []  # Add custom header patterns here
    MAX_HEADER_LENGTH: 100
  VISION_API:
    ENABLED: true
    FEATURES:
      - DOCUMENT_TEXT_DETECTION
      - IMAGE_PROPERTIES
      - LABEL_DETECTION
    MAX_RESULTS: 50

EMBEDDING_MODEL:
  # Model name for Gemini embeddings
  # Capabilities:
  #   - High quality embeddings for text similarity
  #   - Supports multiple languages
  #   - Optimized for semantic search and retrieval
  #   - Task-specific embeddings for different use cases
  MODEL_NAME: "gemini-embedding-exp-03-07"
  
  # Batch size for processing multiple texts at once
  # Higher values are more efficient but use more memory
  # Recommended: 10-15 for optimal throughput while staying within rate limits
  BATCH_SIZE: 15
  
  # Maximum length of text to embed (in tokens)
  # Texts longer than this will be truncated
  MAX_LENGTH: 3072
  
  # Output embedding dimensions
  # Must match VECTOR_STORE.EMBEDDINGS.DIMENSION
  DIMENSIONS: 768
  
  # Task type for optimizing embeddings
  # Options: SEMANTIC_SIMILARITY, CLASSIFICATION, CLUSTERING,
  #          RETRIEVAL_DOCUMENT, RETRIEVAL_QUERY, QUESTION_ANSWERING,
  #          FACT_VERIFICATION, CODE_RETRIEVAL_QUERY
  TASK_TYPE: "RETRIEVAL_DOCUMENT"
  
  # Whether to automatically truncate text that exceeds MAX_LENGTH
  AUTO_TRUNCATE: true

VECTOR_STORE:
  TYPE: "chroma"
  PERSIST_DIRECTORY: "./data/vector_store"
  COLLECTION_NAME: "qa_documents"
  DISTANCE_METRIC: "cosine"  # Options: cosine, euclidean, dot_product
  TOP_K: 40  # Number of similar documents to retrieve
  DIMENSIONS: 768  # Must match EMBEDDING_MODEL.DIMENSIONS 